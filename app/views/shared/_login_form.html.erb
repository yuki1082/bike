<div id="login_form">
	<h2>Log in </h2>
	<%= form_for(:session, url: sessions_path) do |f| %>
	<table class="table">
		<tr>
			<th><%= f.label :email %></th>
			<td><%= f.text_field :email %></td>
		</tr>
		<tr>
			<th><%= f.label :password %></th>
			<td><%= f.password_field :password %></td>
		</tr>
	</table>
	<%= f.submit %>
	<% end %>

	<p><%= link_to "Create new Account", new_user_path %></h2>
	</div>